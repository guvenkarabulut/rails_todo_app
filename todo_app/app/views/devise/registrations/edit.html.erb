<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-floating mb-4">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"email-field", placeholder:"email", style:"width: 20vw" %>
    <label class="form-label" for="email-field">Email</label>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-floating">
    <%= f.password_field :password,
      autofocus: true,
      autocomplete: "new-password",
      class:"form-control",
      id:"password-field",
      placeholder:"password",
      style:"width: 20vw"
    %>
        <label class="form-label" for="password-field">New Password</label>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-floating">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"password-field", placeholder:"password", style:"width: 20vw" %>
    <label class="form-label" for="password-field">Confirm New Password</label>
  </div>
  <br />
  <div class="form-floating">
    
    <%= f.file_field :avatar, class:"form-control", id:"avatar-field", placeholder:"avatar", style:"width: 20vw" %>
    <label class="form-label" for="avatar-field">Avatar</label>
  </div>
  <br />
  <div class="form-floating">
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", id:"password-field", placeholder:"password", style:"width: 20vw" %>
    <label class="form-label" for="password-field">Current Password</label>
  </div>
  <br />
  <div class="actions">
    <%= f.submit "Update", class:"btn btn-primary" %>
  </div>
<% end %>

